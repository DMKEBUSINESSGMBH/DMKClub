{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as macros %}

{% set fullname = entity.name %}
{% oro_title_set({params : {"%member.name%": fullname} }) %}

{% block navButtons %}
    {{ parent() }}
{% endblock navButtons %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('dmkclub_member_index'),
        'indexLabel': 'dmkclub.member.entity_plural_label'|trans,
        'entityTitle': fullname
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block stats %}
    {{ parent() }}
    <li>
        <div class="pull-right label label-info orocrm-channel-lifetime-value-label">
        Stats
        </div>
    </li>
{% endblock stats %}

{% block content_data %}
    {% set memberInformationWidget %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'url':         path('dmkclub_member_widget_info', {id: entity.id})
        }) }}
    {% endset %}

    {% set generalSubBlocks = [{'data' : [memberInformationWidget]}] %}
{#
    {% set memberAddressBookWidget %}
        <div class="responsive-cell">
            {{ oro_widget_render({
                'widgetType': 'block',
                'contentClasses': [],
                'url': path('dmkclub_member_address_book', {id: entity.id}),
                'title': 'Address Book'|trans
            }) }}
        </div>
    {% endset %}
    {% set generalSubBlocks = generalSubBlocks|merge([{'data': [memberAddressBookWidget]}]) %}
#}
    {% set dataBlocks = [
        {
            'title': 'General Information'|trans,
            'class': 'active',
            'subblocks': generalSubBlocks
        },
        {
            'title': 'dmkclub.member.sales.label'|trans,
            'subblocks': [
            ]
        }
    ] %}

    {% set id = 'dmkclubMemberView' %}
    {% set data = {'dataBlocks': dataBlocks} %}
    {{ parent() }}
{% endblock content_data %}
