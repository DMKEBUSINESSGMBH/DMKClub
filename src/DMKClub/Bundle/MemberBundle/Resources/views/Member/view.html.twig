{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}
{% import 'DMKClubBasicsBundle::macros.html.twig' as CLUBUI %}

{% set fullname = entity.name %}
{% oro_title_set({params : {"%member.name%": fullname} }) %}

{% block navButtons %}
    {{ UI.cancelButton(path('dmkclub_member_index')) }}
    {% if resource_granted('EDIT', entity) %}
        {{ UI.editButton({
            'path' : path('dmkclub_member_update', { 'id': entity.id }),
            'entity_label': 'dmkclub.member.entity_label'|trans
        }) }}
    {% endif %}
{% endblock navButtons %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('dmkclub_member_index'),
        'indexLabel': 'dmkclub.member.entity_plural_label'|trans,
        'entityTitle': fullname
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block breadcrumbs %}
    {{ parent() }}
    <div class="pull-left">
        {% if entity.status == 'active' %}
            <div class="badge badge-enabled status-enabled"><i class="icon-status-enabled icon-circle"></i>{{ entity.status|trans }} ({{ entity.memberCode }})</div>
        {% else %}
            <div class="badge badge-disabled status-disabled"><i class="icon-status-disabled icon-circle"></i>{{ entity.status|trans }}</div>
        {% endif %}
    </div>
{% endblock breadcrumbs %}

{% block stats %}
    {{ parent() }}
    <li>
        <div class="pull-right label label-info orocrm-channel-lifetime-value-label">
        Stats
        </div>
    </li>
{% endblock stats %}

{% block content_data %}
    {% set memberInformationWidget %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'url':         path('dmkclub_member_widget_info', {id: entity.id})
        }) }}
    {% endset %}

    {% set memberFees %}
        {% set memberFeeGrid = 'dmkclub-memberfees-grid-member' %}
        {{ dataGrid.renderGrid(memberFeeGrid, {member: entity.id}, { cssClass: 'inner-grid' }) }}
    {% endset %}

    {% set memberFeeDiscounts %}
        {% set memberFeeDiscountGrid	 = 'dmkclub-memberfeediscounts-grid-member' %}
        {{ dataGrid.renderGrid(memberFeeDiscountGrid, {member: entity.id}, { cssClass: 'inner-grid' }) }}
        {% set dialogTitle = 'dmkclub.member.memberfeediscount.action.create.title'|trans %}
    	{{ UI.clientButton({
            	'dataUrl': path('dmkclub_member_memberfeediscount_create', { 'memberId': entity.id }),
            	'aCss': 'no-hash',
            	'iCss': 'icon-plus-sign',
            	'dataId': entity.id,
            	'title' : dialogTitle,
            	'label' : dialogTitle,
            	'widget' : {
                	'type' : 'dialog',
                	'multiple' : false,
                	'reload-grid-name' : 'dmkclub-memberfeediscounts-grid-member',
                	'options' : {
                    	'stateEnabled': false,
                    	'dialogOptions' : {
                        	'title' : dialogTitle,
                        	'allowMaximize': true,
                        	'allowMinimize': true,
                        	'dblclick': 'maximize',
                        	'maximizedHeightDecreaseBy': 'minimize-bar',
                        	'width': 600
                    	}
                	}
            	}
        	})
    	}}
    {% endset %}

{#     {% set feeDiscountWidget %}#}
{#         {{ oro_widget_render({#}
{#             'widgetType': 'block',#}
{#             'contentClasses': [],#}
{#             'url': path('dmkclub_member_memberfeediscount_infoblock', {id: entity.id}),#}
{#             'title': 'Member fee discount'|trans#}
{#         }) }}#}
{#     {% endset %}#}

    {% set memberAdditionalInfo %}
            {{ UI.renderProperty('dmkclub.member.member_code.label'|trans, entity.memberCode) }}
            {{ UI.renderProperty('dmkclub.member.start_date.label'|trans, entity.startDate ? entity.startDate|oro_format_date : null) }}
            {%- if entity.endDate -%}
            	{{ UI.renderProperty('dmkclub.member.end_date.label'|trans, entity.endDate|oro_format_date) }}
            {% endif %}
            {%- if entity.contact -%}
	            {%- set birthdayData -%}
	                {{ entity.contact.birthday is not empty ? entity.contact.birthday|oro_format_date : null }}
	                {% if entity.contact.birthday is not empty %} ({{ entity.contact.birthday|age_string({'default': 'N/A'}) }}){% endif %}
	            {%- endset -%}

            	{{ UI.renderProperty('orocrm.contact.birthday.label'|trans, entity.contact.birthday ? birthdayData : null) }}
	            {{ UI.renderProperty('orocrm.contact.gender.label'|trans, oro_gender(entity.contact.gender)) }}
            {% endif %}
            {{ CLUBUI.renderPropertyBoolean('dmkclub.member.is_active.label'|trans, entity.isActive) }}
            {{ CLUBUI.renderPropertyBoolean('dmkclub.member.is_honorary.label'|trans, entity.isHonorary) }}
            {{ CLUBUI.renderPropertyBoolean('dmkclub.member.is_free_of_charge.label'|trans, entity.isFreeOfCharge) }}
            {% if entity.bankAccount is not empty %}
              {{ UI.renderProperty('dmkclub.payment.bankaccount.account_owner.label'|trans, entity.bankAccount.accountOwner) }}
              {{ UI.renderProperty('dmkclub.payment.bankaccount.iban.label'|trans, entity.bankAccount.iban) }}
              {{ UI.renderProperty('dmkclub.payment.bankaccount.bic.label'|trans, entity.bankAccount.bic) }}
              {{ UI.renderProperty('dmkclub.payment.bankaccount.bank_name.label'|trans, entity.bankAccount.bankName) }}
              {{ UI.renderProperty('dmkclub.payment.bankaccount.direct_debit_valid_from.label'|trans, entity.bankAccount.directDebitValidFrom ? entity.bankAccount.directDebitValidFrom|oro_format_date : null) }}
            {% endif %}

    {% endset %}


    {% set dataBlocks = [
        {
            'title': 'General Information'|trans,
            'class': 'active',
            'subblocks': [
                {
                	'data' : [memberInformationWidget],
                },
                {
                	'data' : [memberAdditionalInfo],
                }
            ]
        },
        {
            'title': 'dmkclub.member.fees.label'|trans,
            'subblocks': [
                {
                    'title': 'dmkclub.member.fees.label'|trans,
                    'data' : [
                        memberFees
                    ]
                },
                {
                    'title': 'dmkclub.member.memberfeediscount.entity_label'|trans,
                    'data' : [
                       memberFeeDiscounts
                    ]
                }
            ]
        }
] %}

    {% set id = 'dmkclubMemberView' %}
    {% set data = {'dataBlocks': dataBlocks} %}
    {{ parent() }}
{% endblock content_data %}
