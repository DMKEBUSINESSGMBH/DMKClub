{#             'widgetType': 'block',#}
{#             'contentClasses': [],#}
{#             'url': path('dmkclub_member_memberfeediscount_infoblock', {id: entity.id}),#}
{#             'title': 'Member fee discount'|trans#}
{#         }) }}#}
{#     {% endset %}#}


    {% set generalSubBlocks = [{'data' : [memberInformationWidget]}] %}
    {% set dataBlocks = [
        {
            'title': 'General Information'|trans,
            'class': 'active',
            'subblocks': generalSubBlocks
        },
        {
            'title': 'dmkclub.member.fees.label'|trans,
            'subblocks': [
                {
                  'title': 'dmkclub.member.fees.label'|trans,
                	'data' : [
                		memberFees
                	]
								},
                {
                  'title': 'dmkclub.member.memberfeediscount.entity_label'|trans,
                	'data' : [
                		memberFeeDiscounts
                	]
								}
            ]
        }
] %}

    {% set id = 'dmkclubMemberView' %}
    {% set data = {'dataBlocks': dataBlocks} %}
    {{ parent() }}
{% endblock content_data %}
