<div class="widget-content row-fluid ">
    <div class="responsive-cell form-horizontal">
        {% set member_name_link %}
            <a href="{{ path('dmkclub_member_view', {'id':member.id}) }}">
                {{ member.name|escape }}
            </a>
        {% endset %}
        {{ UI.renderHtmlProperty('dmkclub.member.name.label'|trans, member_name_link) }}

        {%- if is_granted('oro_contact_view') and member.contact -%}
            {% set contactView = '<a href="' ~ path('oro_contact_view', {'id': member.contact.id}) ~ '">' ~ member.contact|oro_format_name|escape ~ '</a>' %}
        {%- else -%}
            {% set contactView = member.contact ? member.contact|oro_format_name : '' %}
        {%- endif -%}

        {{ UI.renderHtmlProperty('dmkclub.member.contact.label'|trans, contactView) }}

    </div>
</div>
