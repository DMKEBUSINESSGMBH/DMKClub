{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as macros %}

{% set fullname = entity.name %}
{% oro_title_set({params : {"%memberbilling.name%": fullname} }) %}

{% block navButtons %}
  {% if resource_granted('dmkclub_memberbilling_create') %}
    {{ UI.button({'path' : path('dmkclub_memberbilling_createbills', { id: entity.id }), 'iCss' : 'icon-forward', 'title' : 'dmkclub.member.memberbilling.createbills.label'|trans , 'label' : 'dmkclub.member.memberbilling.createbills.label'|trans }) }}
  {% endif %}

  {{ UI.cancelButton(path('dmkclub_memberbilling_index')) }}
  {% if resource_granted('EDIT', entity) %}
    {{ UI.editButton({
        'path' : path('dmkclub_memberbilling_update', { 'id': entity.id }),
        'entity_label': 'dmkclub.member.memberbilling.entity_label'|trans
    }) }}
  {% endif %}
{% endblock navButtons %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('dmkclub_memberbilling_index'),
        'indexLabel': 'dmkclub.member.memberbilling.entity_plural_label'|trans,
        'entityTitle': fullname
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block breadcrumbs %}
    {{ parent() }}
{% endblock breadcrumbs %}

{% block stats %}
    {{ parent() }}
    <li>
        <div class="pull-right label label-info orocrm-channel-lifetime-value-label">
        Stats
        </div>
    </li>
{% endblock stats %}

{% block content_data %}
    {% set entityInformationWidget %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'url':         path('dmkclub_memberbilling_widget_info', {id: entity.id})
        }) }}
    {% endset %}

    {% set generalSubBlocks = [{'data' : [entityInformationWidget]}] %}

    {% set dataBlocks = [
        {
            'title': 'General Information'|trans,
            'class': 'active',
            'subblocks': generalSubBlocks
        },
        {
            'title': 'dmkclub.member.fees.label'|trans,
            'subblocks': [
            ]
        }
    ] %}

    {% set id = 'dmkclubMemberBillingView' %}
    {% set data = {'dataBlocks': dataBlocks} %}
    {{ parent() }}
{% endblock content_data %}
